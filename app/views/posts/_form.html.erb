
<!-- 

Partial files usually prefixed by an underscore 

View partials removes duplication in views

In this case, the edit and new files shared so this _form partial file takes care of that duplication
 
-->

<%= form_for @post do |f| %>
		
		<!-- check if there any errors -->
		<% if @post.errors.any? %>
			<div id="error_explanation" >
				<h2>
					<!-- pluralize takes string as an arguement -->
					<%= pluralize(@post.errors.count, "error") %> prohibited
					this post from being saved:
				</h2>
				
				<ul>
					<!-- shows a list of all the errors -->
					<% @post.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>	
		
		<p>
			<%= f.label :title %><br />
			<%= f.text_field :title %>
		<p>
	
		<p>
			<%= f.label :text %><br />
			<%= f.text_area :text %>
		<p>

	
		<p>
			<%= f.submit %>
		<p>
	
<% end %>
	
	

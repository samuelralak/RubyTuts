<div style="text-align: center">
	<h1>All Posts</h1>

	<%= link_to "New Post", new_post_path %>

	<br/><br/>

	<table align="center" border=1>
		<thead>
			<tr>
				<th>Title</th>
				<th>Text</th>
			</tr>
		</thead>
	
		<% @posts.each do |post| %>
	
		<tbody>
			<tr>
				<td><%= post.title %></td>
				<td><%= post.text %></td>
			</tr>
		</tbody>
	
		<% end %>
	</table>
</div>
